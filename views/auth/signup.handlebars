<main>
    <div id="signupContent">
        <header id="signupHeader">
			<h3 id="signupTitle">Enter Your Information</h3>
		</header>

        <!-- New account's information fill up-->
        <form id="signupForm" action="/user/register" method="post">
			<div class="formSection">
				<h4 class="formSectionTitle">Name</h4>
					<input id="firstName" class="formTextInput" type="text" name="firstName" placeholder="First Name" maxlength="30" required>
					<input id="lastName" class="formTextInput" type="text" name="lastName" placeholder="Last Name" maxlength="30" required>
			</div>

            <div class="formSection">
				<h4 class="formSectionTitle">Email</h4>
					<input id="email" class="formTextInput" type="email" name="email" placeholder="Email" maxlength="30" required>
			</div>

            <div class="formSection">
				<h4 class="formSectionTitle">Address</h4>
					<input id="address" class="formTextInput" type="text" name="address" placeholder="Address" maxlength="90" required>
			</div>

            <div class="formSection">
                <h4 class="formSectionTitle">Job Title</h4>
					<input id="boss" class="formTextInput" type="radio" name="userRole" value="Boss">
					<label for="boss">Boss</label><br>
					<input id="seller" class="formTextInput" type="radio" name="userRole" value="Seller" checked="checked">
					<label for="seller">Seller</label><br>
					<input id="warehouseManager" class="formTextInput" type="radio" name="userRole" value="Warehouse Manager">
					<label for="warehouseManager">Warehouse Manager</label>
            </div>

            <div class="formSection">
				<h4 class="formSectionTitle">Username</h4>
					<input id="username" class="formTextInput" type="username" name="userName" placeholder="Username" maxlength="30" required>
			</div>

			<div class="formSection">
				<h4 class="formSectionTitle">Password</h4>
				<span>
					<input id="newPassword" class="formTextInput" type="password" name="newPassword" placeholder="Password" minlength="8" maxlength="30" required>
				</span>

				<span>
					<input id="confirmPassword" class="formTextInput" type="password" name="confirmPassword" placeholder="Confirm Password" minlength="8" maxlength="30" required>
				</span>
			</div>

			<p class="error"></p>
			<input id="submitButton" type="submit" value="Create Account">
		</form> 

    </div>


</main>