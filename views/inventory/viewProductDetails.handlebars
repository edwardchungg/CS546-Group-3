<main>
    <div id="viewProductDetailsContent">
		<header id="viewProductDetails">
		    <h3 id="viewProductDetailsTitle">View the production's information</h3>
		</header>   

        <div id="prodcutDetailsContent">
            <table id="tableSection">
                <tr>
                    <td>
                        <label for="name">Name:</label>
                    </td>
                    <td>
                        <p id="name" name="name">{{inventory.productName}}</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="manufacturer">Manufacturer:</label>
                    </td>
                    <td>
                        <p id="manufacturer" name="manufacturer">{{inventory.manufacturer}}</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="woodType">Wood type:</label>
                    </td>
                    <td>
                        <p id="woodType" name="woodType">{{inventory.woodType}}</p>
                    </td>
                </tr>  
                <tr>
                    <td>
                        <label for="color">Color:</label>
                    </td>
                    <td>
                        <p id="color" name="color">{{inventory.color}}</p>
                    </td>
                </tr>    
                <tr>
                    <td>
                        <label for="buyingPrice">Buying price (per sqt): $</label>
                    </td>
                    <td>
                        <p id="buyingPrice" name="buyingPrice">{{inventory.unitCost}}</p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="stock">Stock (in sqt):</label>
                    </td>
                    <td>
                        <p id="stock" name="stock">{{inventory.stock}}</p>
                    </td>
                </tr>                                                                                  
            </table>
        </div>

        <div id="actionContent">
            <form id="productDelete" action="/inventory/delete/{{inventory._id}}" method="post" style="display: inline-block;">
                <input type="text" name="productID" value="{{inventory._id}}" hidden/>
                <button id="submitButton" type="submit">Delete this production</button>
            </form>
            <form id="productModify" action="/inventory/modify" method="get" style="display: inline-block;">
                <input type="text" name="_id" value="{{inventory._id}}" hidden/>
                <input type="text" name="productName" value="{{inventory.productName}}" hidden/>
                <input type="text" name="woodType" value="{{inventory.woodType}}" hidden/>
                <input type="text" name="color" value="{{inventory.color}}" hidden/>
                <input type="text" name="manufacturer" value="{{inventory.manufacturer}}" hidden/>
                <input type="number" name="unitCost" value="{{inventory.unitCost}}" hidden/>
                <input type="number" name="stock" value="{{inventory.stock}}" hidden/>                
                <button class="submitButton" type="submit">Modify this production</button>
            </form>
        </div>     
    </div>
</main>